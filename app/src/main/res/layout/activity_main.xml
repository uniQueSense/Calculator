<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="start"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="13"
            android:background="@color/grey"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/menu_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_btn" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@color/black">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/black"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="252dp"
                    android:background="@color/frame1"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/input_screen"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:gravity="center|right"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="25dp"
                        android:autoSizeMaxTextSize="80dp"
                        android:textColor="@color/white"
                        android:maxLength="70"
                        android:layout_margin="1dp"
                        android:background="#2D2D2D"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="82dp"
                    android:background="@color/frame2"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/output_screen"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_margin="1dp"
                        android:gravity="center|right"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="30dp"
                        android:autoSizeMaxTextSize="60dp"
                        android:maxLength="46"
                        android:textColor="@color/white"
                        android:background="#2D2D2D"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/clear"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:text="c"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="@color/red"
                        android:background="@drawable/button_background"/>
                    <Button
                        android:id="@+id/power"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:text="^"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_background"/>
                    <Button
                        android:id="@+id/modulo"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:text="mod"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_background"/>
                    <Button
                        android:id="@+id/division"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:text="/"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_background"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/seven"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:text="7"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_background"/>
                    <Button
                        android:id="@+id/eight"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:text="8"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_background"/>
                    <Button
                        android:id="@+id/nine"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:text="9"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_background"/>
                    <Button
                        android:id="@+id/multiplication"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:text="*"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_background"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/four"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:text="4"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_background"/>
                    <Button
                        android:id="@+id/five"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:text="5"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_background"/>
                    <Button
                        android:id="@+id/six"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:text="6"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_background"/>
                    <Button
                        android:id="@+id/minus"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:text="-"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_background"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/one"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:text="1"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_background"/>
                    <Button
                        android:id="@+id/two"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:text="2"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_background"/>
                    <Button
                        android:id="@+id/three"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:text="3"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_background"/>
                    <Button
                        android:id="@+id/plus"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:text="+"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_background"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/decimal_separator"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:text="."
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_background"/>
                    <Button
                        android:id="@+id/zero"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:text="0"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_background"/>
                    <Button
                        android:id="@+id/backspace"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:text="←"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_background"/>
                    <Button
                        android:id="@+id/equals"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="fill_parent"
                        android:layout_margin="5dp"
                        android:text="="
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_background"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/menu_block"
        android:layout_width="230dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginLeft="-230dp"
        android:background="@color/grey">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_banner_foreground"/>
            </LinearLayout>

            <Button
                android:id="@+id/calculator_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Calculator"/>

            <Button
                android:id="@+id/converter_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Converter"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_empty"/>

        </LinearLayout>

    </FrameLayout>

</FrameLayout>